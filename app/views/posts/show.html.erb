<div class="show-main">
  <div class="lists">
    <div class="image-view">
      <% @images.each do |image| %>
        <%= image_tag image.src.url, size: "400x400", alt: "fair-style" %>
      <% end %>
    </div>
    <div class="comment">
      <div class="upper">
        <p class="upper__date"><%= @post.created_at.strftime("%Y/%m/%d %H:%M") %></p>
        <p class="upper__poster"><%= @user.name %></p>
      </div>
      <div class="midle">
        <%= @post.comment %>
      </div>
      <div class="bottom">
        <%= render partial: 'favorites/favorite' %>
        <div class="favorites-count">
          <%= @post.favorites.size %>
        </div>
      </div>
    </div>
    <% if @post.user_id == current_user.id %>
      <div class="link-btn">
        <div class="link-edit-btn">
          <%= link_to "編集", edit_post_path(@post.id) %>
        </div>
        <div class="link-delete-btn">
          <%= link_to "削除", "/posts/#{@post.id}", method: :delete %>
        </div>
      </div>
    <% end %>
  </div>
</div>